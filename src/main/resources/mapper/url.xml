<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ss.url.dao.UrlDao">

    <insert id="saveUrl" useGeneratedKeys="true" keyProperty="id">
        insert into url
        <trim prefix="(" suffix=")" suffixOverrides=",">
            url,
            type,
            key,
            <if test="url.shortKey ! =null">
                shortKey,
            </if>

        </trim>

        <trim prefix="values ("  suffix=")" suffixOverrides=",">
            #{url.url},
            #{url.type},
            #{url.key}
            <if test="url.shortKey ! =null">
                #{url.shortKey},
            </if>
        </trim>
    </insert>

    <select id="findUrlByLink" parameterType="java.lang.String" resultType="com.ss.url.bean.Url">
        select * from url where url.url.url = #{link}
    </select>


    <select id="finUrlByShortUrl" parameterType="java.lang.String" resultType="com.ss.url.bean.Url">
      select * from url where url.url.shortKey = #{shortUrl}
    </select>





</mapper>